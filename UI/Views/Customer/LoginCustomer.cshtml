<script>
    $(document).ready(function () {
        $("#Smail").hide();
        show_hide_pass()
       $('#showPass1').hide();
        $('#b').hide();
        $('#Input3').click(function () {
            Login();
        })
    })
    function Login() {

        var user = $("#Input1").val();
        var password = $("#Input2").val();

        if (user == "" || user == undefined) {
            $('#a').show();
            $('#b').show();

        }
        else if (password == "" || password == undefined) {
            $('#a').hide();
            $('#b').show();
        }
        else
        {


            $.ajax({
                url: "/Customer/Login?password=" + password + "&phoneNumber=" + user + "&Email=" + user,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",

                success: function (result) {
                    //  alert(result)
                    if (result !=0) {
                        swal({
                            title: "Login Successful",
                            // text: "You clicked the button!",
                            icon: "success",

                            timer: 2000
                        });
                        window.location.href = "RoomCustomerRoom";
                    }
                    else
                    {

                        swal({
                            title: "login Failed",
                            text: "Email or password is wrong!",
                            icon: "error",
                            button: "OK!",

                        });     
                    }
                   
                }
            });
        }

    }
    //اظهار الباسورد واخفاءه
    function show_hide_pass() {
        $('#hidepass1').click(function () {
            $('#hidepass1').hide(); $('#showPass1').show();
            $('#Input2').attr("type", "text")
        })

        $('#showPass1').click(function () {
            $('#showPass1').hide(); $('#hidepass1').show();
            $('#Input2').attr("type", "password")
        })

    }
</script>






